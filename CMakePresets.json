{
  "version": 4,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "displayName": "Base",
      "description": "Base settings",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build",
      "installDir": "${sourceDir}/out/install"
    },
    {
      "name": "debug",
      "inherits": [ "base" ],
      "displayName": "Debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "rel-debinfo",
      "inherits": [ "base" ],
      "displayName": "Release with debug info",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "release",
      "inherits": [ "base" ],
      "displayName": "Release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ]
}