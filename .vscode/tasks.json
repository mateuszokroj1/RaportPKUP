{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Configure CMake (Debug)",
      "type": "shell",
      "command": "cmake --preset debug .",
      "problemMatcher": [
        "$msCompile"
      ]
    },
    {
      "label": "Build all",
      "type": "shell",
      "command": "cmake --build out/build",
      "problemMatcher": []
    },
    {
      "label": "Run all tests",
      "type": "shell",
      "command": "ctest out/build"
    }
  ]
}
